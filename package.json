{
  "name": "dental-cms",
  "version": "1.0.0",
  "description": "Dental Customer Management System",
  "main": "dist/server/index.js",
  "scripts": {
    "install:all": "npm install && cd client && npm install && cd ..",
    "setup": "npm run install:all && npm run prisma:push && npm run create:admin",
    "create:admin": "npx ts-node src/server/scripts/createAdmin.ts",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --watch src/server --exec ts-node src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "postinstall": "prisma generate",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "electron:dev": "cross-env NODE_ENV=development npm run build && cross-env ELECTRON_IS_DEV=1 NODE_ENV=development electron electron/main.js",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "dental",
    "cms",
    "healthcare",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.9.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "wait-on": "^9.0.3"
  }
}
